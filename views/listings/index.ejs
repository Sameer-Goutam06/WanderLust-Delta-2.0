<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/listings/index.css">
<body>
    <h1 class="list">Resorts and Stays</h1>
    <button class="create" onclick="window.location.href='/listings/new'">Create new Stay</button>
    <div class="cards-container">
        <% l.forEach((item, index) => { %>
            <% if (index % 4 === 0) { %>
                <div class="row">
            <% } %>
                    <div class="card" onclick="window.location.href='/listings/<%=item._id%>'">
                        <% if (item.image && item.image.url) { %>
                            <img src="<%= item.image.url %>" class="card-img-top" alt="destination" onerror='this.src="https://cff2.earth.com/uploads/2017/09/31200356/Nature-imagery-has-a-calming-effects-on-prisoners-850x500.jpg"'>
                        <% } else { %>
                            <img src="https://cff2.earth.com/uploads/2017/09/31200356/Nature-imagery-has-a-calming-effects-on-prisoners-850x500.jpg" class="card-img-top" alt="default image">
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= item.title %></h5>
                            <p class="card-text">
                                <%= item.country %>
                                <br>
                                â‚¹<%= item.price %>/night
                            </p>
                        </div>
                    </div>
            <% if (index % 4 === 3) { %>
                </div>
            <% } %>
        <% }); %>
        <% if (l.length % 4 !== 0) { %>
            </div>
        <% } %>
    </div>    
</body>